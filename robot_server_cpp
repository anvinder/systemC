#include "server.h"

 void server_part::move_robot1()
{
	temp_obstacle1y= obstacle1y;
	temp_robot1y = robot1y;
	temp_obstacle1x= obstacle1x;
	temp_robot1x = robot1x;	
	temp_count1= count1;
	temp_count2= count2;
	temp_count3= count3;

if (temp_count1==0)
{
	if (temp_obstacle1y==0 && temp_obstacle1x==0 && temp_robot1y <= 15)
	{
		if (temp_robot1y>=10 && temp_robot1y<15)
		{
		robot1y = temp_robot1y + 1;
		temp_robot1y= robot1y ;
		next_index1y = temp_robot1y + 2;
		current_index1y = temp_robot1y + 1;
		}
		robot1y = temp_robot1y + 2;
		temp_robot1y= robot1y ;
		next_index1y = temp_robot1y + 4;
		current_index1y = temp_robot1y + 2;
		if (current_index1y> temp_robot1y)
		{
		current_index1y = temp_robot1y;
		}
		status1=1;
	}

	if (temp_robot1y>=16 && temp_robot1x <66 && temp_obstacle1y==0 && temp_obstacle1x==0)
	{
		if (temp_robot1x>=60 && temp_robot1y<66)
		{
		robot1x = temp_robot1x + 1;
		temp_robot1x= robot1x ;
		next_index1x = temp_robot1x + 1;
		}
		robot1x= temp_robot1x + 2 ;
		temp_robot1x = robot1x ;
		temp_robot1y = robot1y ;
		status1=1;
		next_index1x = temp_robot1x + 4;
		current_index1x = temp_robot1x + 2;
		if (current_index1x> temp_robot1x)
		{
		current_index1x = temp_robot1x;
		}
	}

		 
	if ( temp_robot1y<52 && temp_robot1x>= 66 && temp_obstacle1y==0 && temp_obstacle1x==0 )
	{
		if (temp_robot1y>=46 && temp_robot1y<52 )
		{
		robot1y = temp_robot1y + 1;
		temp_robot1y= robot1y ;
		next_index1y = temp_robot1y + 1;
		}
		robot1y= temp_robot1y + 2 ;
		temp_robot1y= robot1y ;
		temp_robot1x= robot1x ;
		next_index1y = temp_robot1y + 4;
		current_index1y = temp_robot1y + 2;
		if (current_index1y> temp_robot1y)
		{
			current_index1y = temp_robot1y;
		}
		status1=1;
	}

	if (temp_obstacle1y==1 )
		{
		robot1y= robot1y;
		status1=0;
		}
	else
	if (temp_obstacle1x==1 )
		{
		robot1x= robot1x;
		status1=0;
		}
 }

//--------------------------------------------------------------------------------------------------------------------------
	if (temp_count1==1)
{
	if (temp_obstacle1y==0 && temp_obstacle1x==0 && temp_robot1y <= 4)
	{
	/*	if (temp_robot1y<=2)
		{
		robot1y = temp_robot1y + 1;
		temp_robot1y= robot1y ;
		next_index1y = temp_robot1y + 1;
		}*/
		robot1y = temp_robot1y + 2;
		temp_robot1y= robot1y ;
		next_index1y = temp_robot1y + 4;
		current_index1y = temp_robot1y + 2;
		if (current_index1y> temp_robot1y)
		{
			current_index1y = temp_robot1y;
		}
		status1=1;
	}

	if (temp_robot1y>=4 && temp_robot1x <22 && temp_obstacle1y==0 && temp_obstacle1x==0)
	{
	/*	if (temp_robot1x >= 16 && temp_robot1x < 22)
		{
		robot1x = temp_robot1x + 1;
		temp_robot1x= robot1x ;
		next_index1x = temp_robot1x + 1;
		}*/
		robot1x= temp_robot1x + 2 ;
		temp_robot1x = robot1x ;
		temp_robot1y = robot1y ;
		next_index1x = temp_robot1x + 4;
		current_index1x = temp_robot1x + 2;
		if (current_index1x> temp_robot1x)
		{
			current_index1x = temp_robot1x;
		}
		status1=1;
	}
		 
	if ( temp_robot1y<16 && temp_robot1x>= 22 && temp_obstacle1y==0 && temp_obstacle1x==0 )
	{
	/*	if (temp_robot1y>=11 && temp_robot1y<16)
		{
		robot1y = temp_robot1y + 1;
		temp_robot1y= robot1y ;
		next_index1y = temp_robot1y + 1;
		}*/
		robot1y= temp_robot1y + 2 ;
		temp_robot1y= robot1y ;
		temp_robot1x= robot1x ;
		next_index1y = temp_robot1y + 4;
		current_index1y = temp_robot1y + 2;
		if (current_index1y> temp_robot1y)
		{
			current_index1y = temp_robot1y;
		}
		status1=1;
	}

		if (temp_robot1y>=16 && temp_robot1x <68 && temp_obstacle1y==0 && temp_obstacle1x==0)
	{
	/*	if (temp_robot1x>=62 && temp_robot1x<68)
		{
		robot1x = temp_robot1x + 1;
		temp_robot1x= robot1x ;
		next_index1x = temp_robot1x + 1;
		}*/
		robot1x= temp_robot1x + 2 ;
		temp_robot1x = robot1x ;
		temp_robot1y = robot1y ;
		current_index1x = temp_robot1x + 2;
		next_index1x = temp_robot1x + 4;
		if (current_index1x> temp_robot1x)
		{
			current_index1x = temp_robot1x;
		}
		status1=1;
	}
		 
	if ( temp_robot1y<52 && temp_robot1x>= 68 && temp_obstacle1y==0 && temp_obstacle1x==0 )
	{
	/*	if (temp_robot1y>=47 && temp_robot1y<52)
		{
		robot1y = temp_robot1y + 1;
		temp_robot1y= robot1y ;
		next_index1y = temp_robot1y + 1;
		}*/
		robot1y= temp_robot1y + 2 ;
		temp_robot1y= robot1y ;
		temp_robot1x= robot1x ;
		next_index1y = temp_robot1y + 4;
		current_index1y = temp_robot1y + 2;
		if (current_index1y> temp_robot1y)
		{
			current_index1y = temp_robot1y;
		} 
		status1=1;
	}

	if (temp_obstacle1y==1 )
		{
		robot1y= robot1y;
		status1=0;
		}
	else
	if (temp_obstacle1x==1 )
		{
		robot1x= robot1x;
		status1=0;
		}
  }
}// bracket for the function 
 
