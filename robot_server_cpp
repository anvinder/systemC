 void server_part::move_robot2()
{
	temp_obstacle2y= obstacle2y;
	temp_robot2y = robot2y;
	temp_obstacle2x= obstacle2x;
	temp_robot2x = robot2x;	

if (temp_count2==0)
 {
	if (temp_obstacle2y==0 && temp_obstacle2x==0 && temp_robot2y >=4)
	{
		robot2y = temp_robot2y - 3;
		temp_robot2y= robot2y ;
		next_index2y = temp_robot2y -6;
		current_index2y= robot2y;
		status2=1;
		if (current_index2y> temp_robot2y)
		{
			current_index2y = temp_robot2y;
		}
	}
	
		if (temp_robot2y<=3 && temp_robot2x >0 && temp_robot2x <66 && temp_obstacle2y==0 && temp_obstacle2x==0 )
		{
			robot2x= temp_robot2x + 3 ;
			temp_robot2x = robot2x ;
			temp_robot2y = robot2y ;
			next_index2x = temp_robot2x +6;
			current_index2x= temp_robot2x+3;
			status2=1;
				if (current_index2x> temp_robot2x)
				{
				current_index2x = temp_robot2x;
				}
		}
		
		if ( temp_robot2y>=3 && temp_robot2x<= 66 && temp_obstacle2y==0 && temp_obstacle2x==0)
			{
				temp_robot2y= robot2y ;
				temp_robot2x= robot2x ;
				next_index2x = temp_robot2x;
				next_index2y = temp_robot2y;
				current_index2y= temp_robot2y;
				current_index2x= temp_robot2x;
				status2=1;
			} 

	if (temp_obstacle2y==1 )
		{
		robot2y= robot2y;
		status2=0;
		}
	else
	if (temp_obstacle2x==1 )
		{
		robot2x= robot2x;
		status2=0;
		}
  }
 
//--------------------------------------------------------------------------------------------------------------------------
if (temp_count2==1)
{
	if (temp_obstacle2y==0 && temp_obstacle2x==0 && temp_robot2y >=21 && temp_robot2x < 2)
	{
		robot2y = temp_robot2y - 3;
		temp_robot2y= robot2y ;
		status2=1;
		current_index2y= robot2y ;
		next_index2y = temp_robot2y -6;
			if (current_index2y> temp_robot2y)
			{
			current_index2y = temp_robot2y;
			}
	}
	
		if (temp_robot2y<=19 && temp_robot2x <=51 && temp_obstacle2y==0 && temp_obstacle2x==0 )
		{
			robot2x= temp_robot2x + 3 ;
			temp_robot2x = robot2x ;
			temp_robot2y = robot2y ;
			next_index2x = temp_robot2x +6;
			current_index2x= temp_robot2x +3 ;
				if (current_index2x> temp_robot2x)
				{
				current_index2x = temp_robot2x;
				}
			status2=1;
		}
	
		if (temp_robot2y>=5 && temp_robot2x >=51 && temp_obstacle2y==0 && temp_obstacle2x==0 )
	{
		robot2y = temp_robot2y - 3;
		temp_robot2y= robot2y ;
		next_index2y = temp_robot2y -6;
		current_index2y= robot2y;
			if (current_index2y> temp_robot2y)
			{
			current_index2y = temp_robot2y;
			}
		status2=1;
	}
	
		if (temp_robot2y<=5 && temp_robot2x <=68 && temp_obstacle2y==0 && temp_obstacle2x==0 )
		{
			robot2x= temp_robot2x + 3 ;
			next_index2x = temp_robot2x +6;
			temp_robot2x = robot2x ;
			temp_robot2y = robot2y ;
			current_index2x= temp_robot2x+3;
			if (current_index2x> temp_robot2x)
			{
				current_index2x = temp_robot2x;
			}
			status2=1;
		}


	if (temp_obstacle2y==1 )
		{
		robot2y= robot2y;
		status2=0;
		}
	else
	if (temp_obstacle2x==1 )
		{
		robot2x= robot2x;
		status2=0;
		}
   }
}
