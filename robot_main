#include "robot_part.h"
 void robot_part::move_robot1()
{
	temp_obstacle1y= obstacle1y;
	temp_robot1y = robot1y;
	temp_obstacle1x= obstacle1x;
	temp_robot1x = robot1x;	

	if (temp_obstacle1y==0 && temp_obstacle1x==0 && temp_robot1y <= 15)
	{
		robot1y = temp_robot1y + 2;
		temp_robot1y= robot1y ;
	}
		if (temp_robot1y>=16 && temp_robot1x <66 && temp_obstacle1y==0 && temp_obstacle1x==0 )
		{
			robot1x= temp_robot1x + 2 ;
			temp_robot1x = robot1x ;
			temp_robot1y = robot1y ;
		}
		 
			if ( temp_robot1y<52 && temp_robot1x>= 66 && temp_obstacle1y==0 && temp_obstacle1x==0)
			{
				robot1y= temp_robot1y + 2 ;
				temp_robot1y= robot1y ;
				temp_robot1x= robot1x ;
			}

	if (temp_obstacle1y==1 )
		{
		robot1y= robot1y;
		}
	else
	if (temp_obstacle1x==1 )
		{
		robot1x= robot1x;
		}

}

//------------------------------------------------------------------------------------------------------------------------


 void robot_part::move_robot2()
{
	temp_obstacle2y= obstacle2y;
	temp_robot2y = robot2y;
	temp_obstacle2x= obstacle2x;
	temp_robot2x = robot2x;	

	if (temp_obstacle2y==0 && temp_obstacle2x==0 && temp_robot2y >=4)
	{
		robot2y = temp_robot2y - 3;
		temp_robot2y= robot2y ;
	}
	
		if (temp_robot2y<=3 && temp_robot2x >0 && temp_robot2x <66 && temp_obstacle2y==0 && temp_obstacle2x==0 )
		{
			robot2x= temp_robot2x + 3 ;
			temp_robot2x = robot2x ;
			temp_robot2y = robot2y ;
		}
		
		if ( temp_robot2y>=3 && temp_robot2x<= 66 && temp_obstacle2y==0 && temp_obstacle2x==0)
			{
				temp_robot2y= robot2y ;
				temp_robot2x= robot2x ;
			} 

	if (temp_obstacle2y==1 )
		{
		robot2y= robot2y;
		}
	else
	if (temp_obstacle2x==1 )
		{
		robot2x= robot2x;
		}
	
}


 //--------------------------------------------------------------------------------------------------------------------------

  void robot_part::move_robot3()
{
	temp_obstacle3y= obstacle3y;
	temp_robot3y = robot3y;
	temp_obstacle3x= obstacle3x;
	temp_robot3x = robot3x;	

	if (temp_obstacle3y==0 && temp_obstacle3x==0 && temp_robot3x >=36 && temp_robot3x <=51 )
	{
		robot3x = temp_robot3x + 1;
		temp_robot3x= robot3x ;
	}
	
		if ( temp_robot3y<16 && temp_robot3x ==52 && temp_obstacle3y==0 && temp_obstacle3x==0 )
		{
			robot3y= temp_robot3y + 1 ;
			temp_robot3y = robot3y ;
			temp_robot3x = robot3x ;
		}
		
		if ( temp_robot3y==16 && temp_robot3x < 66 && temp_obstacle3y==0 && temp_obstacle3x==0)
			{
				robot3x = temp_robot3x + 1;
				temp_robot3x= robot3x ;
			} 

		if ( temp_robot3y<32 && temp_robot3x ==66 && temp_obstacle3y==0 && temp_obstacle3x==0 )
		{
			robot3y= temp_robot3y + 1 ;
			temp_robot3y = robot3y ;
			temp_robot3x = robot3x ;
		}

		if ( temp_robot3y==32 && temp_robot3x >12 && temp_obstacle3y==0 && temp_obstacle3x==0)
			{
				robot3x = temp_robot3x - 1;
				temp_robot3x= robot3x ;
			} 

		if ( temp_robot3y<48 && temp_robot3x ==12 && temp_obstacle3y==0 && temp_obstacle3x==0 )
		{
			robot3y= temp_robot3y + 1 ;
			temp_robot3y = robot3y ;
			temp_robot3x = robot3x ;
		}
		
		if ( temp_robot3y==48 && temp_robot3x < 35 && temp_obstacle3y==0 && temp_obstacle3x==0)
			{
				robot3x = temp_robot3x + 1;
				temp_robot3x= robot3x ;
			} 

	if (temp_obstacle3y==1 )
		{
		robot3y= robot3y;
		}
	else
	if (temp_obstacle3x==1 )
		{
		robot3x= robot3x;
		}
	
}
